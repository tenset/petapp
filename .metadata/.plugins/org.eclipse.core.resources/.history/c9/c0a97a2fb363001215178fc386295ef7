 document.forms[0].onsubmit = validate; 

///validate form no input
	function validate() {
		var errors = new Array();
		
		for(var i=0; i < document.forms[0].elements.length; i++) {
				if(document.forms[0].elements[i].type == "text") {
					if(document.forms[0].elements[i].value == "") {
							alert("hi"); //debug
							errors.push("Empty "+document.forms[0].elements[i].id+" field");
						}
					}
				else if(document.forms[0].elements[i].type == "password") {
					if(document.forms[0].elements[i].value == "") {
							errors.push("Empty " +document.forms[0].elements[i].id+" field");
							alert("madd"); //debug
					}
					
				}
			}//end of for loop
				if(errors.length == 0){
					return true;
				}
				else {
					return false;
				}
		
		}// end of validate
	
	var fname = document.getElementById("firstname");
	var lname = document.getElementById("lastname");
	var email = document.getElementById("email");
	var username = document.getElementById("username");
	var password = document.getElementById("password");
	var cpassword = document.getElementById("confirm_password");
	
	
	
	function val_input(field_ID){
		switch(field_ID) {
		case "firstname":
			fname.onblur = function () {
			if(fname.value != "") {
				var getspan = document.getElementById("fspan");
				if(!getspan.hasChildNodes()){
					var pattern = /[a-ZA-Z]{2,20}/;
					if(pattern.test(fname.value)) alert("hello world");
				}
			
			} //end of if statement
		}; //end of case 1;
		
		
		
		} //end of switch
		
	}//end of val_input
	
	
	//get the target elements
	function targetElement(e){
		var elem, evt = e ? e : event;
		if(evt.srcElement) elem = evt.srcElement;
		else if(evt.target) elem = evt.target;
		
		val_input(elem.id);
		
		
	}
	
	document.onclick = targetElement;